@model IEnumerable<CarShop.Application.DTOs.Car.CarDto>

@if (Model.Any())
{
    <div class="d-flex flex-wrap justify-content-center">
        @foreach (var car in Model)
        {
            <div class="card m-2" style="width: 18rem; flex: 0 0 auto;">
                <img src="@car.ImageUrl" class="card-img-top" style="height: 200px; object-fit: cover;" alt="@car.Title">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@car.Title</h5>
                    <p class="card-text">Brand: @car.BrandName</p>
                    <p class="card-text">Price: $@car.Price</p>
                    <div class="mt-auto text-center">
                        <a href="/Car/Details/@car.Id" class="btn btn-primary btn-sm">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <h4 class="text-center">No Cars Found</h4>
}
