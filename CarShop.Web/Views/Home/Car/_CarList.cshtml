@model IEnumerable<CarShop.Application.DTOs.Car.CarDto>

<div class="row">
    @if (Model.Any())
    {
        @foreach (var car in Model)
        {
            <div class="col-md-3 mb-4 d-flex">
                <div class="card w-100">
                    <img src="@car.ImageUrl" class="card-img-top" style="height: 200px; object-fit: cover;" alt="@car.Title">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@car.Title</h5>
                        <p class="card-text">Brand: @car.BrandName</p>
                        <p class="card-text">Price: $@car.Price</p>
                        <div class="mt-auto text-center">
                            <a href="/Home/Details/@car.Id" class="btn btn-primary btn-sm">View Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <h4 class="text-center">No Cars Found</h4>
    }
    @if ((bool)ViewBag.ShowAllButton)
    {
        <div class="text-center mt-3">
            <a href="@Url.Action("AllCars", "Car")" class="btn btn-secondary">View All Cars</a>
        </div>
    }
</div>
