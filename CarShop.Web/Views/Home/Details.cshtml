@model CarShop.Web.ViewModels.Car.CarViewModel

@{
    ViewData["Title"] = Model.Title;
    var comments = ViewBag.Comments as IEnumerable<CarShop.Application.DTOs.Comment.CommentDto>;
}


<div class="container mt-5">

    <div class="row mb-5">
        <div class="col-md-6 text-center">
            <img src="@Model.ImageUrl" alt="@Model.Title Image" class="img-fluid" style="max-height: 400px; object-fit: contain;" />
        </div>
        <div class="col-md-6">
            <h1 class="mb-4">@Model.Title</h1>
            <p>@Model.Description</p>
            <p><strong>Brand:</strong> @Model.BrandName</p>
            <p><strong>Quantity:</strong> @Model.Quantity</p>
            <p><strong>Price:</strong> $@Model.Price</p>

            @if (!User.IsInRole("Admin"))
            {
                @if (User.Identity?.IsAuthenticated == true && Model.Quantity > 0)
                {
                    <form method="post" action="@Url.Action("Buy", "Order")">
                        <input type="hidden" name="carId" value="@Model.Id" />
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Buy Now</button>
                        </div>
                    </form>
                }
                else if (Model.Quantity == 0)
                {
                    <p class="text-danger"><strong>Out of Stock</strong></p>
                }
                else
                {
                    <p class="mt-3">
                        <a href="/Account/Login" class="btn btn-outline-primary">Login to Buy</a>
                    </p>
                }
            }            
        </div>
    </div>

    <div class="card mb-4">
        <h5 class="card-header">Total Reviews: @comments!.Count()</h5>
        <div class="card-body">
            @if (comments!.Any())
            {
                foreach (var comment in comments!)
                {
                    <div class="border p-3 mb-3">
                        <h6 class="text-muted">@comment.CreatedAt.ToString("MMM dd, yyyy")</h6>
                        <p><strong>@comment.UserName</strong></p>
                        <p>@comment.Content</p>
                    </div>
                }
            }
            else
            {
                <p>No reviews yet. Be the first to review!</p>
            }
        </div>
    </div>

    <div class="card mb-5">
        <div class="card-body">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <h4 class="mb-3">Add a Comment</h4>
                <form method="post" action="@Url.Action("AddComment", "Comment")">
                    <input type="hidden" name="CarId" value="@Model.Id" />
                    <div class="mb-3">
                        <label for="commentContent" class="form-label">Comment</label>
                        <textarea name="Content" class="form-control" rows="4" required></textarea>
                    </div>
                    <button class="btn btn-warning" @(User.IsInRole("Admin") ? "disabled" : "")>Submit</button>
                </form>
            }
            else
            {
                <a href="/Account/Login" class="btn btn-outline-primary">Login to Review</a>
            }
        </div>
    </div>

</div>


@section Scripts {
    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'success',
                text: '@TempData["SuccessMessage"]',
                position: 'top-end',
                timer: 5000,
                toast: true,
                timerProgressBar: true
            });
        </script>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: '@TempData["ErrorMessage"]',
                position: 'top-end',
                timer: 5000,
                toast: true,
                timerProgressBar: true
            });
        </script>
    }

}
