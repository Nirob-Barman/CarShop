@model CarShop.Application.DTOs.Identity.ChangePasswordDto
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/Account/_AuthLayout.cshtml";  @* You can adjust this if you're using a custom layout *@
}

<div class="card shadow-lg border-0 rounded-4 p-4">
    <div class="card-body">
        <h2 class="text-center mb-4">Change Password</h2>

        <form asp-action="ChangePassword" method="post" novalidate>
            <div class="mb-3">
                <label asp-for="CurrentPassword" class="form-label fw-semibold">Current Password</label>
                <input asp-for="CurrentPassword" class="form-control form-control-lg" type="password" placeholder="Enter current password" />
                <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label fw-semibold">New Password</label>
                <input asp-for="NewPassword" class="form-control form-control-lg" type="password" placeholder="Enter new password" />
                <span asp-validation-for="NewPassword" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="form-label fw-semibold">Confirm New Password</label>
                <input asp-for="ConfirmPassword" class="form-control form-control-lg" type="password" placeholder="Confirm new password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100">Change Password</button>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Profile" class="btn btn-outline-secondary">Back to Profile</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
