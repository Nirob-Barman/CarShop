@model CarShop.Application.DTOs.Identity.ForgotPasswordDto
@{
    ViewData["Title"] = "Forgot Password";
}

<h3>Forgot Password</h3>

<form asp-action="ForgotPassword" method="post" class="w-50">
    <div class="form-group mb-3">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning">Send Reset Link</button>

    @if (TempData["ResetLink"] != null)
    {
        <div class="alert alert-info mt-3">
            Simulated Reset Link: <br />
            <a href="@TempData["ResetLink"]">@TempData["ResetLink"]</a>
        </div>
    }

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success mt-3">@ViewBag.Message</div>
    }
</form>
