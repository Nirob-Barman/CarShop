@model CarShop.Application.DTOs.Identity.EditProfileDto

@{
    ViewData["Title"] = "My Profile";
}

<h2 class="text-center mb-4">My Profile</h2>

<div class="w-50 mx-auto">
    <form asp-action="EditProfile" method="post">
        <div class="form-group mb-3">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Save Changes</button>
    </form>

    <div class="mt-4 text-center">
        <a asp-action="ChangePassword" class="btn btn-outline-secondary">ChangePassword</a>
        <a asp-action="ForgotPassword" class="btn btn-outline-warning mb-2">Forgot Password (Demo)</a><br />
        @* <a asp-action="ResetPassword" asp-route-email="user@example.com" asp-route-token="sample-token" class="btn btn-outline-danger">
            Reset Password (Test Link)
        </a> *@
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
