@model CarShop.Application.DTOs.Identity.EditProfileDto

@{
    ViewData["Title"] = "My Profile";
    Layout = "~/Views/Shared/Account/_AuthLayout.cshtml";
}

<div class="card shadow-lg border-0 rounded-4 p-4">
    <div class="card-body">
        <h2 class="text-center mb-4">Edit Your Profile</h2>
        <form asp-action="EditProfile" method="post" novalidate>
            <div class="mb-3">
                <label asp-for="FullName" class="form-label fw-semibold">Full Name</label>
                <input asp-for="FullName" class="form-control form-control-lg" placeholder="John Doe" />
                <span asp-validation-for="FullName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label fw-semibold">Address</label>
                <input asp-for="Address" class="form-control form-control-lg" placeholder="1234 Main St" />
                <span asp-validation-for="Address" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100">Save Changes</button>
        </form>

        <div class="text-center mt-3">
            <a asp-action="ChangePassword" class="btn btn-outline-secondary me-2">Change Password</a>
            <a asp-action="ForgotPassword" class="btn btn-outline-warning">Forgot Password (Demo)</a>
        </div>

        @* Optional Reset Password Link (for testing purposes only) *@
        @* 
        <div class="mt-3 text-center">
            <a asp-action="ResetPassword" 
               asp-route-email="user@example.com" 
               asp-route-token="sample-token" 
               class="btn btn-outline-danger">
               Reset Password (Test Link)
            </a>
        </div>
        *@
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'success',
                text: '@TempData["SuccessMessage"]',
                position: 'top-end',
                timer: 5000,
                toast: true,
                timerProgressBar: true
            });
        </script>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: '@TempData["ErrorMessage"]',
                position: 'top-end',
                timer: 5000,
                toast: true,
                timerProgressBar: true
            });
        </script>
    }
}
