@model CarShop.Application.DTOs.Identity.ResetPasswordDto
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/Account/_AuthLayout.cshtml";
}

<div class="card shadow-lg border-0 rounded-4 p-4">
    <div class="card-body">
        <h3 class="text-center mb-4">Reset Your Password</h3>

        <form asp-action="ResetPassword" method="post" novalidate>
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Token" />

            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label fw-semibold">New Password</label>
                <input asp-for="NewPassword" class="form-control form-control-lg" type="password" placeholder="Enter your new password" />
                <span asp-validation-for="NewPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-success btn-lg w-100">Reset Password</button>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Login" class="btn btn-outline-secondary">Back to Login</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: '@TempData["ErrorMessage"]',
                position: 'top-end',
                timer: 5000,
                toast: true,
                timerProgressBar: true
            });
        </script>
    }
}
